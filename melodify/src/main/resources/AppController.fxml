<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
    fx:controller="org.juhanir.view.AppController"
    prefHeight="400.0" prefWidth="640.0">
    <children>

        <VBox id="VBox" alignment="CENTER" spacing="8.0" AnchorPane.leftAnchor="16.0"
            AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="16.0">
            <children>
                <HBox alignment="CENTER" spacing="8.0" >
                    <VBox>
                        <Label text="Key" />
                        <ComboBox fx:id="musicalKeySelect" prefWidth="160.0" />
                    </VBox>
                    <VBox>
                        <Label text="Markov Chain degree" />
                        <TextField fx:id="degreeField" prefWidth="160.0" />
                    </VBox>
                </HBox>
                <Label fx:id="infoLabel" />
                <Button fx:id="trainButton" text="Train"/>
                <Button fx:id="generateButton" text="Generate"/>
                <ComboBox fx:id="playbackSelect" />
                <Button fx:id="playButton" text="Play"/>
            </children>
        </VBox>

    </children>
</AnchorPane>